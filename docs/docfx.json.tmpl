{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.csproj"],
          "exclude": ["**/bin/**", "**/obj/**"]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "docs/articles/**.md",
          "index.md"
        ],
        "src": "."
      }
    ],
    "template": [ "default", "./docs/custom" ],
    "resource": [
      "docs/**/*.png",
      "docs/**/*.svg"
    ],
    "dest": "{{DOC_OUTPUT_DIR}}",
    "globalMetadata": {
      "_appTitle": "{{PROJECT_NAME}}"
    }
  }
}